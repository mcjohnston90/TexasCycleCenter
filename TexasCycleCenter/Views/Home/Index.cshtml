@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Texas Cycle Center</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div id="carouselExampleControls" class="carousel slide" style="width:auto; height:auto" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Static Content/20180412-Suzuki-logo-2200x500.png" style="width:500px; height:300px;" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Static Content/20180412-Kawasaki-logo-2000x1000.png" style="width:500px; height:300px;" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Static Content/20180412-Honda-Motorcycle-logo-3000x2500.png" style="width:500px; height:300px;" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>